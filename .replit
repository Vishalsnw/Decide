run = "npm run build "
modules = ["nodejs-20"]
[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run build "]

[workflows]
runButton = "Start AI Coding Assistant"

[[workflows.workflow]]
name = "Start AI Coding Assistant"
author = 43564906
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "lsof -ti:5000 | xargs kill -9 || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"

[[ports]]
localPort = 5000
externalPort = 80
